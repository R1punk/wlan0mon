#!/bin/sh
if [ "$(id -u)" != "0" ]; then
	echo "This script must be run as root"
	exit 1
fi

if [ ! -e "/sys/module/wlan/parameters/con_mode" ]; then
	echo "Looks like you have an unsupported device! This script working only on Qualcomm!"
	exit 1
fi

# Shutdown gracefully
iwpriv wlan0 monitor 0
# Disable the interface
ip link set wlan0 down
sleep 1
# Change driver mode to STA
echo 0 > /sys/module/wlan/parameters/con_mode
# Wait for driver to reload
sleep 2
